{
  "name": "aperitif",
  "version": "1.0.0",
  "description": "A boilerplate for web projects",
  "main": "gulpfile.js",
  "dependencies": {
    "jquery": "^3.2.1",
    "normalize.css": "^7.0.0",
    "svg4everybody": "^2.1.9"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "browser-sync": "^2.18.13",
    "cssnano": "^3.10.0",
    "del": "^3.0.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-changed": "^3.1.0",
    "gulp-concat": "^2.6.1",
    "gulp-data": "^1.2.1",
    "gulp-imagemin": "^3.3.0",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^7.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-svg-sprite": "^1.3.7",
    "gulp-twig": "^0.7.0",
    "gulp-uglify": "^3.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "scripts": {
    "start": "gulp",
    "build": "gulp build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/florianbouvot/aperitif.git"
  },
  "author": "Florian Bouvot <florian.bouvot+github@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/florianbouvot/aperitif/issues"
  },
  "homepage": "https://github.com/florianbouvot/aperitif#readme",
  "paths": {
    "src": {
      "base": "./src/",
      "css": "./src/css/",
      "js": "./src/js/",
      "img": "./src/img/",
      "sprites": "./src/icons/",
      "fonts": "./src/fonts/"
    },
    "dist": {
      "base": "./dist/",
      "css": "./dist/css/",
      "js": "./dist/js/",
      "img": "./dist/img/",
      "sprites": "./dist/icons/",
      "fonts": "./dist/fonts/"
    }
  },
  "vars": {
    "cssName": "main.scss",
    "jsName": "main.min.js",
    "spriteName": "icons.svg",
    "dataName": "data.json"
  },
  "globs": {
    "js": [
      "./node_modules/svg4everybody/dist/svg4everybody.min.js",
      "./node_modules/jquery/dist/jquery.slim.min.js",
      "./src/js/main.js"
    ],
    "html": "./src/*.{html,twig}",
    "img": "./src/img/**/*",
    "sprites": "./src/icons/**/*.svg",
    "fonts": "./src/fonts/**/*.{eot,ttf,woff,woff2}",
    "clean": [
      "dist/**",
      "!dist"
    ]
  },
  "urls": {
    "local": "./dist/"
  }
}
