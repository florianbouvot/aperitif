{
  "name": "project-name",
  "version": "1.0.0",
  "description": "A description for your project.",
  "main": "gulpfile.js",
  "repository": "link-to-your-git-repo.git",
  "author": "your name",
  "license": "MIT",
  "dependencies": {
    "lazysizes": "^5.2.1-rc2",
    "svg4everybody": "^2.1.9",
    "tailwindcss": "^1.4.6"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.0",
    "browser-sync": "^2.26.7",
    "del": "^5.1.0",
    "gulp": "^4.0.2",
    "gulp-changed": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-csso": "^4.0.1",
    "gulp-imagemin": "^7.1.0",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-size": "^3.0.0",
    "gulp-svg-symbols": "^3.2.3",
    "gulp-svgmin": "^2.2.0",
    "gulp-uglify": "^3.0.2"
  },
  "browserslist": [
    "defaults"
  ],
  "tasks": {
    "styles": true,
    "scripts": true,
    "images": true,
    "fonts": true,
    "clean": true,
    "reload": true
  },
  "paths": {
    "input": "src/",
    "output": "dist/",
    "styles": {
      "input": "src/css/**/*.{scss,sass}",
      "output": "dist/css/"
    },
    "scripts": {
      "input": "src/js/",
      "output": "App/assets/js/"
    },
    "images": {
      "input": "src/img/**/*.{gif,jpg,png,svg}",
      "output": "dist/img/"
    },
    "fonts": {
      "input": "src/fonts/**/* ",
      "output": "dist/fonts/"
    },
    "clean": [
      "dist/css/",
      "dist/fonts/",
      "dist/img/",
      "dist/js/"
    ],
    "tailwind": "tailwind.config.js",
    "templates": "dist/**/*.html",
    "reload": "dist/"
  },
  "scripts": {
    "start": "gulp",
    "build": "NODE_ENV=production gulp build"
  }
}
