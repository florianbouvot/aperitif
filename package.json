{
  "name": "aperitif",
  "version": "1.0.0",
  "description": "A boilerplate for web projects",
  "main": "gulpfile.js",
  "author": "Florian Bouvot <florian.bouvot@gmail.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "cookieconsent": "^3.1.1",
    "lazysizes": "^5.1.1",
    "normalize.css": "^8.0.1",
    "sass-mq": "^5.0.1",
    "svg4everybody": "^2.1.9",
    "tailwindcss": "^1.1.2"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "autoprefixer": "^9.6.1",
    "browser-sync": "^2.26.7",
    "cssnano": "^4.1.10",
    "del": "^5.1.0",
    "gulp": "^4.0.2",
    "gulp-changed": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-data": "^1.3.1",
    "gulp-imagemin": "^6.1.1",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.0.2",
    "gulp-size": "^3.0.0",
    "gulp-svg-symbols": "^3.2.3",
    "gulp-svgmin": "^2.2.0",
    "gulp-twig": "^1.2.0",
    "gulp-uglify": "^3.0.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/florianbouvot/aperitif.git"
  },
  "bugs": {
    "email": "florian.bouvot@gmail.com"
  },
  "paths": {
    "src": {
      "base": "./src/",
      "css": "./src/css/",
      "js": "./src/js/",
      "html": "./src/",
      "img": "./src/img/",
      "sprites": "./src/icons/",
      "fonts": "./src/fonts/"
    },
    "dist": {
      "base": "./dist/",
      "css": "./dist/css/",
      "js": "./dist/js/",
      "html": "./dist/",
      "img": "./dist/img/",
      "sprites": "./dist/sprites/",
      "fonts": "./dist/fonts/"
    },
    "templates": "./dist/"
  },
  "vars": {
    "jsName": "main.min.js",
    "jsRgpdName": "rgpd.min.js",
    "spriteName": "icons.svg",
    "dataName": "data.json"
  },
  "globs": {
    "cssVendor": [
      "./node_modules/cookieconsent/build/cookieconsent.min.css",
      "./node_modules/normalize.css/normalize.css"
    ],
    "js": [
      "./node_modules/svg4everybody/dist/svg4everybody.min.js",
      "./node_modules/lazysizes/lazysizes.js",
      "./src/js/main.js"
    ],
    "jsRgpd": [
      "./node_modules/cookieconsent/build/cookieconsent.min.js",
      "./src/js/rgpd.js"
    ],
    "purgecss": [
      "./dist/css/*.css"
    ],
    "purgecssContent": [
      "./dist/**/*.{html,twig}"
    ],
    "purgecssWhitelist": [],
    "clean": [
      "dist/*",
      "!dist",
      "./src/css/vendor/"
    ]
  },
  "urls": {
    "local": "./dist/"
  },
  "scripts": {
    "start": "gulp",
    "build": "gulp build"
  }
}
