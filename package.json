{
  "name": "aperitif",
  "version": "1.0.0",
  "description": "A boilerplate for web projects",
  "main": "gulpfile.js",
  "author": "Florian Bouvot <florian.bouvot@gmail.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "jquery": "^3.3.0",
    "lazysizes": "^4.0.1",
    "normalize.css": "^7.0.0",
    "svg4everybody": "^2.1.9"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.5",
    "browser-sync": "^2.23.5",
    "cssnano": "^3.10.0",
    "del": "^3.0.0",
    "gulp": "^4.0.0",
    "gulp-changed": "^3.2.0",
    "gulp-concat": "^2.6.1",
    "gulp-data": "^1.3.1",
    "gulp-imagemin": "^4.1.0",
    "gulp-plumber": "^1.2.0",
    "gulp-postcss": "^7.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-size": "^3.0.0",
    "gulp-svg-sprite": "^1.3.7",
    "gulp-twig": "^1.2.0",
    "gulp-uglify": "^3.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "scripts": {
    "start": "gulp",
    "build": "gulp build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/florianbouvot/aperitif.git"
  },
  "bugs": {
    "email": "florian.bouvot@gmail.com"
  },
  "paths": {
    "src": {
      "base": "./src/",
      "css": "./src/css/",
      "js": "./src/js/",
      "html": "./src/",
      "img": "./src/img/",
      "sprites": "./src/icons/",
      "fonts": "./src/fonts/"
    },
    "dist": {
      "base": "./dist/",
      "css": "./dist/css/",
      "js": "./dist/js/",
      "html": "./dist/",
      "img": "./dist/img/",
      "sprites": "./dist/sprites/",
      "fonts": "./dist/fonts/"
    }
  },
  "vars": {
    "jsName": "main.min.js",
    "spriteName": "icons.svg",
    "dataName": "data.json"
  },
  "globs": {
    "js": [
      "./node_modules/svg4everybody/dist/svg4everybody.min.js",
      "./node_modules/jquery/dist/jquery.slim.min.js",
      "./src/js/main.js"
    ],
    "clean": [
      "dist/*",
      "!dist"
    ]
  },
  "urls": {
    "local": "./dist/"
  }
}
